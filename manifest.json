  "related_applications": [],
  "prefer_related_applications": false,
  "dir": "ltr",
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 350
  },
  "protocol_handlers": [
    {
      "protocol": "web+eds",
      "url": "/?camera=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/geo+json": [".geojson"],
        "application/json": [".json"]
      }
    }
  ],
  "permissions": [
    "geolocation",
    "notifications",
    "vibrate",
    "background-sync",
    "periodic-background-sync"
  ],
  "features": [
    "proximity-alerts",
    "navigation-integration", 
    "offline-support",
    "background-tracking",
    "custom-settings",
    "multi-level-alerts",
    "speech-synthesis",
    "vibration-patterns"
  ]
}